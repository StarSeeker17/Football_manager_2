@model Match

@{
    ViewBag.Title = "Game analysis";
}

<html>
<body>
    <div class="dialogBox" style="height: inherit; margin-top: 15%;">
        <h3 id="titleMessage"></h3>
        <br />
        <h4 id="coinsMessage"></h4>
        <h4 id="trophiesMessage"></h4>
        <br />
        <a style="text-decoration:none; font-size: 125%;" class="accessButton" asp-action="GameMenu" asp-controller="Game">Play another match</a>
        <a style="text-decoration:none; font-size: 125%;" class="accessButton" asp-action="Standings" asp-controller="Home">See your current standing</a>
    </div>
    <img style="position: absolute;right: 70%;top: 25%;z-index: 1; max-width: auto; height: 75%;" id="coachPhoto" src=""/>
    <img style="position: absolute;right: 10%;top: 25%;z-index: 1; max-width: auto; height: 75%;" id="playerPhoto" src="" />
    <img style="position: absolute;right: 10%;top: 45%;z-index: 1; max-width: auto; height: 55%;" id="drawPhoto" src="" />
    
</body>
</html>

<script>
    // Select the html elements
    const dialogBox = document.querySelector('.dialogBox');
    const titleMessage = document.querySelector('#titleMessage');
    const coinsMessage = document.querySelector('#coinsMessage');
    const trophiesMessage = document.querySelector('#trophiesMessage');
    const coachPhoto = document.querySelector('#coachPhoto');
    const playerPhoto = document.querySelector('#playerPhoto');
    const drawPhoto = document.querySelector('#drawPhoto');

    // Check the result of the match
    if (@Model.HomeGoals > @Model.AwayGoals)
    {
        titleMessage.innerHTML = "<h3>Congratulations! You won the match!</h3>";
        coinsMessage.innerHTML = "<h4>You earned 100 coins!</h4>";
        trophiesMessage.innerHTML = "<h4>You earned 10 trophies!</h4>";
        coachPhoto.src = "/css/legends/joseWin.png";
        playerPhoto.src = "/css/legends/lukaWin.png";
    }
    else if (@Model.HomeGoals < @Model.AwayGoals)
    {
        titleMessage.innerHTML = "<h3>Unlucky! You lost the match!</h3>";
        coinsMessage.innerHTML = "<h4>You earned 10 coins!</h4>";
        trophiesMessage.innerHTML = "<h4>You lost 3 trophies!</h4>";
        coachPhoto.src = "/css/legends/simeoneLoss.png";
        playerPhoto.src = "/css/legends/neyLoss.png";
    }
    else
    {
        titleMessage.innerHTML = "<h3>It's a draw!</h3>";
        coinsMessage.innerHTML = "<h4>You earned 50 coins!</h4>";
        trophiesMessage.innerHTML = "<h4>You earned no trophies!</h4>";
        drawPhoto.src = "/css/legends/pepklopp.png";
    }
</script>
@{
}
@model FootballManager_v0._1.Models.News

<head>
    <h1>Post announcement</h1>

    <meta name="viewport" content="width=device-width" />
    <title>Football Manager - Announcements</title>
    <link rel="stylesheet" href="~/css/site.css" />

</head>

<body>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="AdminId" class="control-label"></label>
                    <input asp-for="AdminId" class="form-control" />
                    <span asp-validation-for="AdminId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post" class="control-label"></label>
                    <textarea asp-for="Post" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Post" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <br /><input type="submit" value="Create" class="btn btn-primary" /> |
                    <a class="btn btn-primary" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
